{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "awa://schemas/v2.0.0/transform.schema.json",
  "title": "AWA Transform Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "transform_id",
    "timestamp",
    "operator",
    "transform_type",
    "inputs_used",
    "rules_applied"
  ],
  "properties": {
    "transform_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "operator": { "type": "string", "enum": ["human", "ai"] },
    "transform_type": {
      "type": "string",
      "enum": [
        "synthesis",
        "reduction",
        "reformatting",
        "mapping",
        "canon_anchoring",
        "boundary_enforcement",
        "validation",
        "extraction"
      ]
    },
    "inputs_used": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "format": "uuid" },
      "uniqueItems": true
    },
    "rules_applied": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "notes": { "type": "string" },
    "outputs_expected": {
      "type": "array",
      "items": { "type": "string", "format": "uuid" },
      "uniqueItems": true
    }
  }
}
